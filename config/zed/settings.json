// Zed settings
//
// Place this here: ~/.config/zed/settings.json
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "agent": {
    "default_profile": "write",
    "always_allow_tool_actions": true,
    "dock": "right",
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4.1"
    }
  },
  "vim_mode": true,
  "icon_theme": "Material Icon Theme",
  "ui_font_size": 17,
  "buffer_font_size": 16,
  "ui_font_family": "JetBrainsMono Nerd Font Mono",
  "autosave": "on_focus_change",
  "cursor_shape": "underline",
  "format_on_save": "on",
  "relative_line_numbers": true,
  "file_types": {
    "Dockerfile": ["Dockerfile.*", "compose.yaml", "Containerfile.*"]
  },
  "languages": {
    // you dont need ts and js in zed as vstsl is by default enabled
    // "TypeScript": {
    //   "language_servers": ["typescript-language-server"]
    // },
    // "JavaScript": {
    //   "language_servers": ["typescript-language-server"]
    // },
    "JSON": {
      "language_servers": ["vscode-json-languageserver"]
    },
    "YAML": {
      "language_servers": ["yaml-language-server"]
    },
    "Markdown": {
      "language_servers": ["marksman"]
    },
    "Dockerfile": {
      "language_servers": ["dockerfile-language-server"]
    },
    "Shell Script": {
      "language_servers": ["bash-language-server"]
    },
    "SQL": {
      "language_servers": ["sql-language-server"]
    }
  },
  "theme": {
    "mode": "dark",
    "light": "One Light",
    "dark": "One Dark"
  },
  "context_servers": {
    "mcp-server-sonarqube": {
      "source": "extension",
      "enabled": true,
      "settings": {
        "sonarqube_token": "bcf936f306ca28c5ded4e083690bf5e2e8c22f99",
        "sonarqube_org": "bearingpoint",
        "docker_path": "/opt/homebrew/bin/docker"
      }
    },
    "postgres-context-server": {
      "source": "extension",
      "settings": {
        "database_url": "postgresql://postgres:pass1234@localhost:5444/postgres"
      }
    }
  }
}
